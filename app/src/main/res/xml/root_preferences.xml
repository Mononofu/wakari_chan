<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="About">

        <Preference
            app:key="pref_static_field_key"
            app:persistent="false"
            app:selectable="false"
            app:summary="Japanese dictionary, showing translations as screen overlay.\nTo translate
a word, tap and hold, then select Wakari-chan from the context menu.\nBased on Yomichan." />

    </PreferenceCategory>

    <PreferenceCategory app:title="Anki Integration">
        <Preference
            app:key="pref_static_field_key_2"
            app:persistent="false"
            app:selectable="false"
            app:summary="If AnkiDroid is installed, dictionary entries can be exported directly to AnkiDroid as study cards." />

    <EditTextPreference
        android:defaultValue="Japanese::Wakari-chan"
        android:key="deck_name"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Deck Name" />

    </PreferenceCategory>


</PreferenceScreen>